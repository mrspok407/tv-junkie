{
  "rules": {
    ".read": "root.child('users').child(auth.uid).child('role').val() === 'ADMIN'",
    ".write": "root.child('users').child(auth.uid).child('role').val() === 'ADMIN'",
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "!data.exists()",
        "username": { ".write": true, ".read": true },
        "userNameLowerCase": { ".write": true, ".read": true },
        "email": { ".write": "newData.exists() && auth.token.firebase.sign_in_provider === 'google.com'" },
        "role": { ".write": "newData.exists() && auth.token.firebase.sign_in_provider === 'google.com'" },
        "content": {
          ".write": "auth != null && auth.uid == $uid",
          "episodes": {
            ".indexOn": ["info/isAllWatched_database", "info/finished"],
            "$id": {
              "episodes": {
                ".indexOn": ".value"
              }
            }
          },
          "shows": {
            ".read": "auth != null",
            ".indexOn": ["timeStamp"]
          },
          "movies": {
            "watchLaterMovies": {
              ".indexOn": ["timeStamp"]
            }
          }
        },
        "contactsDatabase": {
          ".read": "auth != null",
          ".write": "auth != null",
          "contactsList": {
            ".indexOn": ["pinned_lastActivityTS", "userName", "userNameLowerCase"]
          },
          "contactsLastActivity": {
            ".indexOn": [".value"]
          }
        }
      }
    },
    "privateChats": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$key": {
        "messages": {
          ".indexOn": "timeStamp"
        }
      }
    },
    "groupChats": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$key": {
        "messages": {
          ".indexOn": "timeStamp"
        }
      }
    },
    "allShowsList": {
      ".read": "auth != null",
      ".write": "root.child('users').child(auth.uid).child('role').val() === 'ADMIN'",
      "$id": {
        ".write": "auth != null",
        "usersWatching": {
          ".validate": "newData.exists()"
        },
        "usersWatchingList": {
          "$uid": {
            ".validate": "auth.uid == $uid && newData.val() == true"
          }
        }
      }
    },
    "allShowsListIds": {
      "$id": {
        ".read": "root.child('users').child(auth.uid).child('role').val() === 'ADMIN'",
        ".write": "root.child('users').child(auth.uid).child('role').val() === 'ADMIN'"
      }
    }
  }
}
